@model IEnumerable<DbFirstApp.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DbFirstApp</title>
    <style type="text/css">
        table{
            border-collapse:collapse;
        }
        th, td{
            border: 1px solid;
            padding: 2px;
        }
    </style>
</head>
<body>
    <h1>List of Products</h1>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>More Actions</th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.ActionLink("View Orders", "Details", new { id=item.Id }),
                @Html.ActionLink("Edit Product", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
